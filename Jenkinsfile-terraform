pipeline {
    agent any

    environment {
        TF_WORKDIR = './terraform' // Path to your Terraform code
        AWS_REGION = 'us-east-1'   // Modify as needed
    }

    stages {
        stage('Checkout') {
            steps {
                echo 'ğŸ“¥ Checking out code...'
                checkout scm
            }
        }

        stage('Verify AWS CLI') {
            steps {
                echo 'ğŸ” Verifying AWS CLI is available...'
                sh 'aws --version'
            }
        }

        stage('Check AWS Identity') {
            steps {
                echo 'ğŸ” Checking AWS identity...'
                sh '''
                echo "AWS Access Key: $AWS_ACCESS_KEY_ID"
                echo "AWS Secret Key: $AWS_SECRET_ACCESS_KEY"
                aws sts get-caller-identity
                '''
            }
        }

        stage('Terraform Init') {
            steps {
                echo 'ğŸ”§ Running terraform init...'
                dir("${env.TF_WORKDIR}") {
                    sh 'terraform init'
                }
            }
        }

        stage('Terraform Validate') {
            steps {
                echo 'âœ… Validating Terraform configuration...'
                dir("${env.TF_WORKDIR}") {
                    sh 'terraform validate'
                }
            }
        }

        stage('Terraform Plan') {
            steps {
                echo 'ğŸ“ Planning Terraform changes...'
                dir("${env.TF_WORKDIR}") {
                    sh 'terraform plan -out=tfplan'
                }
            }
        }

        stage('Terraform Apply') {
            steps {
                echo 'ğŸš€ Applying Terraform changes...'
                dir("${env.TF_WORKDIR}") {
                    sh 'terraform apply -auto-approve tfplan'
                }
            }
        }
    }

    post {
        always {
            echo 'ğŸ“¦ Terraform pipeline completed.'
        }
        failure {
            echo 'âŒ Terraform pipeline failed.'
        }
    }
}
